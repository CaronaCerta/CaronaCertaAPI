{
  "scripts": {
    "test": "./bin/behat",
    "docs": "apidoc -i app/controllers/ -o docs/"
  },
  "require": {
    "php": ">= 5.4",
    "slim/slim": "2.4.*",
    "illuminate/database": "4.2.*",
    "ircmaxell/password-compat": "1.0.*"
  },
  "require-dev": {
    "behat/behat": "2.4.*@stable",
    "guzzlehttp/guzzle": "5.0.*"
  },
  "config": {
    "bin-dir": "bin/"
  },
  "autoload": {
    "files": [
      "app/config.php",
      "db_handler.php"
    ],
    "classmap": [
      "app/models/",
      "app/middlewares/",
      "app/validators/",
      "app/util/"
    ]
  }
}
